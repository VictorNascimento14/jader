<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.consultoria.imagem.controller.GerenciarLojasController">
   <top>
      <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #172940;">
         <children>
            <Label text="Gerenciar Lojas" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <HBox spacing="20.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <Label text="Lista de Lojas:">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <ListView fx:id="listViewLojas" prefHeight="400.0" prefWidth="300.0" />
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="btnEditarLoja" mnemonicParsing="false" onAction="#editarLoja" text="Editar" />
                        <Button fx:id="btnExcluirLoja" mnemonicParsing="false" onAction="#excluirLoja" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Excluir" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox spacing="15.0">
               <children>
                  <Label text="Adicionar/Editar Loja:">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Nome da Loja:" />
                        <TextField fx:id="txtNomeLoja" promptText="Ex: Zara, C&amp;A, etc." />
                        <Label text="EndereÃ§o:" />
                        <TextField fx:id="txtEnderecoLoja" promptText="Ex: Shopping ABC, Loja 123 ou www.site.com.br" />
                        <Label text="Contato:" />
                        <TextField fx:id="txtContatoLoja" promptText="Ex: (11) 99999-9999 ou contato@loja.com" />
                     </children>
                  </VBox>
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="btnSalvarLoja" mnemonicParsing="false" onAction="#salvarLoja" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Salvar" />
                        <Button fx:id="btnLimparCampos" mnemonicParsing="false" onAction="#limparCampos" text="Limpar" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </center>
</BorderPane>
