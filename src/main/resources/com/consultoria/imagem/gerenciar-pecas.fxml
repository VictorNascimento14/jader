<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.consultoria.imagem.controller.GerenciarPecasController">
   <top>
      <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #172940;">
         <children>
            <Label text="Gerenciar Peças (Catálogo)" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <HBox spacing="20.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <Label text="Catálogo de Peças:">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <ListView fx:id="listViewPecas" prefHeight="400.0" prefWidth="350.0" />
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="btnEditarPeca" mnemonicParsing="false" onAction="#editarPeca" text="Editar" />
                        <Button fx:id="btnExcluirPeca" mnemonicParsing="false" onAction="#excluirPeca" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Excluir" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox spacing="15.0">
               <children>
                  <Label text="Adicionar/Editar Peça:">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Nome da Peça:" />
                        <TextField fx:id="txtNomePeca" promptText="Ex: Calça de Alfaiataria Preta" />
                        <Label text="Descrição:" />
                        <TextField fx:id="txtDescricaoPeca" promptText="Ex: Calça social feminina, tecido crepe" />
                        <Label text="Loja:" />
                        <ComboBox fx:id="comboLojas" prefWidth="200.0" promptText="Selecione uma loja" />
                        <Label text="Valor (R$):" />
                        <TextField fx:id="txtValorPeca" promptText="Ex: 299.90" />
                        <Label text="Caminho da Foto:" />
                        <HBox spacing="10.0">
                           <children>
                              <TextField fx:id="txtFotoPeca" prefWidth="200.0" promptText="Ex: /caminho/para/foto.jpg" />
                              <Button fx:id="btnSelecionarFoto" mnemonicParsing="false" onAction="#selecionarFoto" text="Selecionar" />
                           </children>
                        </HBox>
                        <Label text="Observações:" />
                        <TextArea fx:id="txtObservacoesPeca" prefRowCount="2" promptText="Ex: Ótimo caimento, tecido versátil..." />
                     </children>
                  </VBox>
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="btnSalvarPeca" mnemonicParsing="false" onAction="#salvarPeca" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Salvar" />
                        <Button fx:id="btnLimparCampos" mnemonicParsing="false" onAction="#limparCampos" text="Limpar" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </center>
</BorderPane>
